{{
  action-button
  isPrimary=true
  label='Edit Collection'
  onClick=(action editCollection)
}}

<h3>Main Detail</h3>
<div class="row">
  <div class="col-md-12">
    {{#ccdb-table model=model columns=mainColumns as |c|}}
      {{#c.grid as |g|}}
        {{g.head}}
        {{g.body}}
      {{/c.grid}}
    {{/ccdb-table}}
  </div>
</div>

<hr>

<h3>Species/Counts</h3>
<div class="row">
  <div class="col-md-12">
    {{#ccdb-table model=model.[0].collectionSpecies columns=collectionSpeciesColumns as |c|}}
      {{#c.grid as |g|}}
        {{g.head}}
        {{g.body}}
      {{/c.grid}}
    {{/ccdb-table}}
  </div>
</div>

<hr>

<h3>Notes</h3>
<div class="row">
  <div class="col-md-12">
    {{model.[0].notes}}
  </div>
</div>

<hr>

<h3>Attachments</h3>
<div class="row">
  <div class="col-md-12">
    <ul>
      {{#each model.[0].datasheets as |d|}}
        <li><a href="{{ d.datasheet }}">{{ d.datasheet }}</a></li>
      {{/each}}
    </ul>
  </div>
</div>
